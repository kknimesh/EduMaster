{
  "name": "edumaster",
  "version": "1.0.0",
  "description": "Complete Education Management System",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:mobile\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "dev:backend": "cd backend/services/gateway-service && npm run dev",
    "install:all": "./complete-setup",
    "build": "npm run build:frontend && npm run build:mobile && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "build:backend": "cd backend/services/gateway-service && npm run build",
    "test": "npm run test:frontend && npm run test:mobile && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:mobile": "cd mobile && npm test",
    "test:backend": "cd backend/services/gateway-service && npm test",
    "lint": "npm run lint:frontend && npm run lint:mobile && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "lint:backend": "cd backend/services/gateway-service && npm run lint"
  },
  "keywords": ["education", "management", "system", "microservices", "react", "react-native", "node.js"],
  "author": "Nimesh Kumar",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}